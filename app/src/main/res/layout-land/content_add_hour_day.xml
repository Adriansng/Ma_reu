<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6D6"
    tools:context=".ui_reunion_list.AddReunionActivity"
    tools:showIn="@layout/add_reunion_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_add"
            android:layout_width="312dp"
            android:layout_height="226dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="PrivateResource">

            <ImageButton
                android:id="@+id/date_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry"
                android:contentDescription="@string/filter_button_for_date_description" />

            <TextView
                android:id="@+id/view_date_add"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:text="@string/add_date_type"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <ImageButton
                android:id="@+id/hour_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="135dp"
                android:background="@drawable/ic_access_time_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry"
                android:contentDescription="@string/filter_button_for_time_description" />

            <TextView
                android:id="@+id/view_hour_add"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="135dp"
                android:text="@string/add_hour_type"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2_add"
            android:layout_width="321dp"
            android:layout_height="109dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:padding="50dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="PrivateResource">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/roomReunion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:layout_anchor="@+id/roomReunion"
                app:layout_anchorGravity="start|center"
                android:visibility="gone"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/title_room_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/add_choose_meeting_room"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>