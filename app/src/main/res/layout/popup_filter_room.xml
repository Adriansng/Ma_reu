<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6C0F6"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/popup_filter_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_date"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:padding="15dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/date"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="25dp"
        android:padding="15dp"
        android:layout_gravity="start"
        android:background="@drawable/ic_date_range_black_24dp"
        android:ems="10" />

    <TextView
        android:id="@+id/view_date_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:padding="15dp"
        android:text="@string/select_a_meeting_date"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/popup_filter_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="25dp"
        android:layout_marginTop="130dp"
        android:padding="15dp"
        android:text="@string/filter_meeting_room"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_room_reunion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:prompt="@string/select_a_meeting_room"
        android:spinnerMode="dialog"
        android:layout_marginTop="200dp"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/validate_btn_popup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/ic_check_circle_black_24dp"
        android:contentDescription="@string/button_validate_filter" />

    <ImageButton
        android:id="@+id/cancel_btn_popup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="275dp"
        android:background="@drawable/ic_cancel_black_24dp"
        android:contentDescription="@string/button_cancel_filter" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>