<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#DBD6D6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".ui_reunion_list.AddReunionActivity"
    tools:showIn="@layout/add_reunion_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation">

            <TextView
                android:id="@+id/view_hour_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_type"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/view_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hour_type"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/date_et_heure"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/date"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry" />

            <Button
                android:id="@+id/hour"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/ic_access_time_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="RtlSymmetry">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/roomReunion"
                android:layout_width="124dp"
                android:layout_height="46dp"
                android:layout_marginStart="225dp"
                android:layout_marginTop="415dp"
                app:layout_anchor="@+id/roomReunion"
                app:layout_anchorGravity="start|center"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="415dp"
                android:text="@string/choix_de_la_salle"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>