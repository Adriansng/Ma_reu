<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6D6"
    tools:context=".ui_reunion_list.AddReunionActivity"
    tools:showIn="@layout/add_reunion_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="100dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_add"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation">

            <Button
                android:id="@+id/date_add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ic_date_range_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/view_date_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginStart="100dp"
                android:text="@string/date_type"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/hour_add"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="130dp"
                android:gravity="start"
                android:background="@drawable/ic_access_time_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/view_hour_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginStart="100dp"
                android:text="@string/hour_type"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2_add"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:padding="50dp"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="PrivateResource">

            <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/roomReunion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:layout_anchor="@+id/roomReunion"
            app:layout_anchorGravity="start|center"
            tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="@string/choix_de_la_salle"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>