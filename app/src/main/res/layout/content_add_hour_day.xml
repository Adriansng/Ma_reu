<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBD6D6"
    tools:context=".ui_reunion_list.AddReunionActivity"
    tools:showIn="@layout/add_reunion_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="100dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_add"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            app:cardCornerRadius="5dp"
            android:background="#A6C0F6"
            app:cardMaxElevation="@dimen/cardview_default_elevation">

            <ImageButton
                android:id="@+id/date_add"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_date_range_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry"
                android:contentDescription="@string/button_for_date_description" />

            <TextView
                android:id="@+id/view_date_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/date_type"
                android:textSize="15sp"
                android:textStyle="bold"/>


            <ImageButton
                android:id="@+id/hour_add"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="100dp"
                android:layout_marginTop="120dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_access_time_black_24dp"
                android:ems="10"
                tools:ignore="RtlSymmetry"
                android:contentDescription="@string/button_for_time_description" />

            <TextView
                android:id="@+id/view_hour_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginStart="25dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/hour_type"
                android:textSize="15sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2_add"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="2dp"
            android:padding="50dp"
            android:background="#A6C0F6"
            app:cardCornerRadius="5dp"
            app:cardMaxElevation="@dimen/cardview_default_elevation"
            tools:ignore="PrivateResource">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/roomReunion"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:prompt="@string/select_a_meeting_room"
                app:layout_anchor="@+id/roomReunion"
                android:visibility="gone"
                app:layout_anchorGravity="start|center"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center|top"
                android:text="@string/choose_meeting_room"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>